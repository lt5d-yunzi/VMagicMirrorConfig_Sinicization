<Window x:Class="Baku.VMagicMirrorConfig.LicenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="VMagicMirror License" Height="450" Width="600">
    <Window.Resources>
        <ResourceDictionary Source="../../Resources/LicenseTextResource.xaml"/>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="10">

            <TextBlock HorizontalAlignment="Center"
                       FontWeight="Bold"
                       FontSize="16"
                       Text="OSS URLs"/>

            <TextBlock Text="{StaticResource OpenSourceURLs}"
                       TextWrapping="Wrap"
                       Margin="5,0,5,15"
                       />

            <TextBlock HorizontalAlignment="Center"
                       FontWeight="Bold"
                       FontSize="16"
                       Text="OSS License"/>

            <TextBlock Text="{StaticResource OpenSourceLicenses}"
                       TextWrapping="Wrap"
                       />

        </StackPanel>
    </ScrollViewer>
</Window>
